<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/ic_launcher_background">

    <!-- Check updates btn -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/updateCheckBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_for_updates_button_txt"
        android:textColor="@color/light_teal"
        android:layout_marginTop="36dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style"
        android:paddingHorizontal="16dp"
        android:onClick="onCheckForUpdatesButtonClick"
        android:scaleY="1.6"
        android:scaleX="1.6"/>

    <!-- Check internet access btn -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/networkCheckBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/testing_connection"
        android:textColor="@color/light_teal"
        android:layout_below="@id/updateCheckBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_style"
        android:paddingHorizontal="16dp"
        android:onClick="onCheckForNetworkButtonClick"
        android:scaleY="1.6"
        android:scaleX="1.6"/>

    <!-- Exit btn -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/EXIT"
        android:textColor="@color/warning_red"
        android:layout_below="@id/networkCheckBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_style"
        android:paddingHorizontal="16dp"
        android:onClick="onExitButtonClick"
        android:scaleY="1.6"
        android:scaleX="1.6"/>
</RelativeLayout>
